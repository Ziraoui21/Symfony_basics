{% extends "base.html.twig" %}

{% block title %}detail - Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto mt-5">
                <div class="card">
                    <div class="card-header">{{ product.name }}</div>
                    <div class="card-body">
                        <h4 class="card-subtitle mb-2 text-muted">Ref : {{ product.id }}</h4>
                        <h4 class="mb-3">price : {{ product.price }} MAD</h4>
                        <p>Description : {{ product.body }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{path('app_product_edit',{id : product.id})}}" class="card-link">Update</a>
                        <a href="{{path('app_product_delete',{id : product.id})}}" class="card-link">Delete</a>
                        <a href="{{path('app_product')}}" class="card-link">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}