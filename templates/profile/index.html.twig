{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto mt-3">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success</strong> {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto mt-5">
                <form action="{{ url('app_profile_update') }}" method="post" enctype="multipart/form-data">
                    
                    <div class="card">
                        <div class="card-header"><h4>{{ user.username }}</h4></div>

                        <div class="card-body">
                            <div class="text-center">
                                {% if user.image %}

                                    <img src="{{ asset("images_profil/#{user.image}") }}"
                                    width="150px"
                                    height="150px"
                                    class="rounded-circle">

                                {% else %}
                                
                                    <img src="https://cdn.pixabay.com/photo/2021/07/02/04/48/user-6380868__340.png"
                                    width="150px"
                                    height="150px"
                                    class="rounded-circle">

                                {% endif %}
                                
                            </div>

                            <div class="mt-3">
                                <label class="label-control mb-2">Modfier l'image :</label>
                                <input type="file" class="form-control" name="image">
                            </div>
                        </div>
    
                        <div class="card-footer">
                            <a href="{{url('app_product')}}" class="btn btn-dark me-2">Page d'acceuil</a>
                            <button type="submit" class="btn btn-dark">Changer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
